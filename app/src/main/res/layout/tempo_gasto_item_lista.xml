<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  CardsViews__________________________________ -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android.support.v7.cardview:cardElevation="10dp"
        android.support.v7.cardview:cardCornerRadius="5dp"
        android.support.v7.cardview:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:padding="5dp"
            android:layout_marginStart="0dp">

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textViewDia"
                android:text="Planejamento"
                android:textSize="24sp"
                android:typeface="normal"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:paddingLeft="50dp"
                android:paddingBottom="50dp"
                android:paddingEnd="50dp"
                android:paddingRight="50dp"
                android:paddingStart="10dp"
                android:paddingTop="50dp"
                android:gravity="left"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/textViewData" />

            <TextView
                android:text="Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMedida"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/textView12" />

            <TextView
                android:text="Tempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTempo"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textViewDia"
                android:layout_alignBottom="@+id/textViewDia"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewData"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>