<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wereh.academytraining.apresentacao.TreinoDetalhesActivity"
    tools:showIn="@layout/activity_treino_detalhes">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--  CardsViews__________________________________ -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="5dp"

            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/series"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="Série:"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/repeticoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="Repetições: "
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtViewCarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtViewRepeticao"
                        android:layout_below="@+id/txtViewRepeticao"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:text="carg"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtViewRepeticao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/repeticoes"
                        android:layout_alignBottom="@+id/repeticoes"
                        android:layout_margin="1dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/repeticoes"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:text="rept"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/carga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_weight="1"
                        android:text="Carga: "
                        android:textSize="18sp"
                        android:typeface="normal" />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="90dp"
                        android:layout_weight="-10"
                        android:text="Intervalo"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtViewSerie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtViewRepeticao"
                        android:layout_below="@+id/nomeExercicio"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:text="serie"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtIntervalo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView7"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_toEndOf="@+id/txtViewObseravacao"
                        android:layout_weight="-10"
                        android:padding="1dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingLeft="500dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:text="Inter"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtViewObseravacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView7"
                        android:layout_below="@+id/textView7"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="10dp"
                        android:layout_toStartOf="@+id/txtViewCarga"
                        android:layout_weight="1"
                        android:text="Observação"
                        android:textSize="18sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/txtViewObs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtIntervalo"
                        android:layout_below="@+id/txtIntervalo"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:padding="1dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:text="Observação"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--  CardsViews__________________________________ -->
        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="5dp"

            app:cardElevation="20dp">

            <LinearLayout
                android:id="@+id/linearLayoutGrafico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewDescricao2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Evolução das cargas"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textViewTitulo">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <!--

                     <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />
                     -->

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
