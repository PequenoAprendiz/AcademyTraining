<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wereh.academytraining.apresentacao.TreinoDetalhesActivity"
    tools:showIn="@layout/activity_treino_detalhes">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--  CardsViews__________________________________ -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="5dp"

            app:cardBackgroundColor="@color/cardview_light_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/series"
                    android:text="Série:"

                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/repeticoes"
                    android:layout_weight="1"
                    android:text="Repetições: "
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewCarga"
                    android:text="carg"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:padding="1dp"
                    android:layout_below="@+id/txtViewRepeticao"
                    android:layout_alignStart="@+id/txtViewRepeticao"
                    android:paddingLeft="50dp"
                    android:paddingBottom="50dp"
                    android:paddingEnd="50dp"
                    android:paddingRight="50dp"
                    android:paddingStart="1dp"
                    android:paddingTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewRepeticao"
                    android:text="rept"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:padding="1dp"
                    android:layout_alignBaseline="@+id/repeticoes"
                    android:layout_alignBottom="@+id/repeticoes"
                    android:layout_toEndOf="@+id/repeticoes"
                    android:paddingLeft="50dp"
                    android:paddingBottom="50dp"
                    android:paddingEnd="50dp"
                    android:paddingRight="50dp"
                    android:paddingStart="1dp"
                    android:paddingTop="50dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carga"
                    android:layout_weight="1"
                    android:text="Carga: "
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp" />


                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="-10"
                    android:text="Intervalo"
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp"  />

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewSerie"
                    android:text="serie"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:typeface="normal"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingBottom="50dp"
                    android:paddingEnd="50dp"
                    android:paddingRight="50dp"
                    android:paddingStart="1dp"
                    android:paddingTop="50dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_below="@+id/nomeExercicio"
                    android:layout_alignStart="@+id/txtViewRepeticao" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtIntervalo"
                        android:layout_weight="-10"
                        android:text="Inter"
                        android:textSize="18sp"
                        android:typeface="normal"
                        android:padding="1dp"
                        android:paddingLeft="500dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_alignTop="@+id/textView7"
                        android:layout_toEndOf="@+id/txtViewObseravacao" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewObseravacao"
                        android:text="Observação"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:typeface="normal"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/textView7"
                        android:layout_alignStart="@+id/textView7"
                        android:layout_toStartOf="@+id/txtViewCarga" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewObs"
                        android:text="Observação"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:typeface="normal"
                        android:padding="1dp"
                        android:paddingLeft="50dp"
                        android:paddingBottom="50dp"
                        android:paddingEnd="50dp"
                        android:paddingRight="50dp"
                        android:paddingStart="1dp"
                        android:paddingTop="50dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_below="@+id/txtIntervalo"
                        android:layout_alignStart="@+id/txtIntervalo" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
