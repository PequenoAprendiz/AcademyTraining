<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apresentacao.fragments.FragmentActivityPlanejamentos">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_planejamentos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="wereh.academytraining.apresentacao.FragmentActivityPlanejamentos">

        <Button
            android:text="Adicionar Planejamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCarregarPlanejamentos"
            android:onClick="criarPlanejamento"
            android:textAllCaps="false" />

        <TextView
            android:text="Meus planejamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtview"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/listViewFichaDeTreino"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/buttonCarregarPlanejamentos" />

    </LinearLayout>

</FrameLayout>
