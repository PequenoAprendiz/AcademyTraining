<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--  CardsViews__________________________________ -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android.support.v7.cardview:cardElevation="10dp"
        android.support.v7.cardview:cardCornerRadius="5dp"
        android.support.v7.cardview:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:padding="5dp"
            android:layout_marginStart="0dp">

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textViewDia"
                android:text="Dia"
                android:textSize="24sp"
                android:typeface="normal"
                android:padding="1dp"
                android:layout_width="wrap_content"
                android:paddingLeft="50dp"
                android:paddingBottom="50dp"
                android:paddingEnd="50dp"
                android:paddingRight="50dp"
                android:paddingStart="10dp"
                android:paddingTop="50dp"
                android:gravity="left"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:text="Meta: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_below="@+id/textViewDia"
                android:layout_toStartOf="@+id/textViewMeta"
                android:textStyle="normal|italic" />

            <TextView
                android:text="Meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMeta"
                android:layout_alignBaseline="@+id/textView24"
                android:layout_alignBottom="@+id/textView24"
                android:layout_alignParentEnd="true"
                android:textStyle="normal|bold" />

            <TextView
                android:text="ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAgua"
                android:layout_below="@+id/textViewDia"
                android:layout_toEndOf="@+id/textView26"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Quantidade  ingerida: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_alignBaseline="@+id/textViewAgua"
                android:layout_alignBottom="@+id/textViewAgua"
                android:layout_alignParentStart="true"
                android:textStyle="normal|italic" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>